@model MvcMovie.Models.Formation

<h2>Ajouter une formation</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Titre" class="form-label"></label>
        <input asp-for="Titre" class="form-control" />
        <span asp-validation-for="Titre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DateDebut" class="form-label"></label>
        <input asp-for="DateDebut" type="date" class="form-control"
               min="@(new DateTime(DateTime.Today.Year, 1, 1).ToString("yyyy-MM-dd"))"
               max="@(new DateTime(DateTime.Today.Year, 12, 31).ToString("yyyy-MM-dd"))" />
        <span asp-validation-for="DateDebut" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DateFin" class="form-label"></label>
        <input asp-for="DateFin" type="date" class="form-control"
               min="@(
                    (Model != null && Model.DateDebut != default(DateTime))
                        ? Model.DateDebut.ToString("yyyy-MM-dd")
                        : DateTime.Today.ToString("yyyy-MM-dd")
                  )"
               max="@(new DateTime(DateTime.Today.Year, 12, 31).ToString("yyyy-MM-dd"))" />
        <span asp-validation-for="DateFin" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Duree" class="form-label"></label>
        <input asp-for="Duree" type="number" class="form-control" />
        <span asp-validation-for="Duree" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Capacite" class="form-label"></label>
        <input asp-for="Capacite" type="number" class="form-control" />
        <span asp-validation-for="Capacite" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Statut" class="form-label"></label>
        <select asp-for="Statut" class="form-control" asp-items="Html.GetEnumSelectList<MvcMovie.Models.StatutFormation>()"></select>
        <span asp-validation-for="Statut" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Cr√©er</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
