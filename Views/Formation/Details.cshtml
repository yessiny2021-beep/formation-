@model MvcMovie.Models.Formation

@{
    ViewData["Title"] = "Détails Formation";
}

<h1>Détails Formation</h1>

<div>
    <h4>@Model.Titre</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Date Début</dt>
        <dd class="col-sm-10">@Model.DateDebut.ToShortDateString()</dd>

        <dt class="col-sm-2">Date Fin</dt>
        <dd class="col-sm-10">@Model.DateFin.ToShortDateString()</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Modifier</a>
<a asp-action="Index" class="btn btn-secondary">Retour</a>
