@model MvcMovie.Models.Formation

<h2>Détails de la formation</h2>

<p><strong>Titre :</strong> @Model.Titre</p>
<p><strong>Description :</strong> @Model.Description</p>
<p><strong>Date début :</strong> @Model.DateDebut.ToString("dd/MM/yyyy")</p>
<p><strong>Date fin :</strong> @Model.DateFin.ToString("dd/MM/yyyy")</p>
<p><strong>Durée :</strong> @Model.Duree heures</p>
<p><strong>Capacité :</strong> @Model.Capacite</p>
<p><strong>Statut :</strong> @Model.Statut</p>
<p><strong>Inscriptions :</strong> @(Model.Inscriptions?.Count ?? 0)</p>

<a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
