﻿@using MvcMovie.Models
@{
    ViewData["Title"] = "Accueil";
    var userFullName = ViewBag.UserFullName ?? "Utilisateur";
}

<!-- Hero Section -->
<div class="hero-section text-center mb-5">
    <div class="container">
        <h1 class="display-4 mb-3">
            <i class="fas fa-graduation-cap me-3"></i>
            Bienvenue, @userFullName 👋
        </h1>
        <p class="lead mb-0">Gérez vos formations efficacement avec notre plateforme moderne</p>
    </div>
</div>

<!-- Partie Employé -->
@if (User.IsInRole("Employe"))
{
    <div class="row mb-5">
        <div class="col-12">
            <div class="card shadow-lg">
                <div class="card-header">
                    <h3 class="mb-0">
                        <i class="fas fa-calendar-alt me-2"></i>
                        Mes prochaines formations
                    </h3>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th><i class="fas fa-book me-2"></i>Formation</th>
                                    <th><i class="fas fa-calendar me-2"></i>Date</th>
                                    <th class="text-center"><i class="fas fa-cog me-2"></i>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var prochainesFormations = (ViewBag.ProchainesFormations as List<Formation>) ?? new List<Formation>();
                                }
                                @foreach (var f in prochainesFormations)
                                {
                                    <tr>
                                        <td class="fw-semibold">@f.Titre</td>
                                        <td>
                                            <span class="badge bg-info">
                                                <i class="fas fa-calendar-day me-1"></i>
                                                @f.DateDebut.ToString("dd/MM/yyyy")
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <a asp-controller="Inscription" asp-action="Create" asp-route-id="@f.Id" 
                                               class="btn btn-sm btn-primary">
                                                <i class="fas fa-user-plus me-1"></i>
                                                S'inscrire
                                            </a>
                                        </td>
                                    </tr>
                                }
                                @if (!prochainesFormations.Any())
                                {
                                    <tr>
                                        <td colspan="3" class="text-center text-muted py-4">
                                            <i class="fas fa-info-circle me-2"></i>
                                            Aucune formation disponible pour le moment
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@if (User.IsInRole("Admin"))
{
    <!-- Statistiques Cards -->
    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="stat-card">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="mb-2">Total Employés</p>
                        <h3>@ViewBag.TotalEmployes</h3>
                    </div>
                    <div>
                        <i class="fas fa-users fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-card" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%);">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="mb-2">Total Formations</p>
                        <h3>@ViewBag.TotalFormations</h3>
                    </div>
                    <div>
                        <i class="fas fa-book fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-card" style="background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <p class="mb-2">Inscriptions en attente</p>
                        <h3>@ViewBag.InscriptionsEnAttente</h3>
                    </div>
                    <div>
                        <i class="fas fa-clock fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Calendrier des formations -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-lg">
                <div class="card-header">
                    <h3 class="mb-0">
                        <i class="fas fa-calendar-alt me-2"></i>
                        Calendrier des formations
                    </h3>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th><i class="fas fa-calendar me-2"></i>Date</th>
                                    <th><i class="fas fa-book me-2"></i>Formation</th>
                                    <th class="text-center"><i class="fas fa-users me-2"></i>Inscriptions</th>
                                </tr>
                            </thead>
                            <tbody>
                            @{
                                var allFormations = (ViewBag.AllFormations as List<Formation>) ?? new List<Formation>();
                            }
                            @foreach (var f in allFormations)
                            {
                                var count = f.Inscriptions?.Count ?? 0;
                                var isHighCount = count > 10;
                                <tr>
                                    <td>
                                        <span class="badge bg-primary">
                                            <i class="fas fa-calendar-day me-1"></i>
                                            @f.DateDebut.ToString("dd/MM/yyyy")
                                        </span>
                                    </td>
                                    <td class="fw-semibold">@f.Titre</td>
                                    <td class="text-center">
                                        <span class="badge @(isHighCount ? "bg-danger" : "bg-success") px-3 py-2">
                                            <i class="fas fa-user-friends me-1"></i>
                                            @count inscrit@(count > 1 ? "s" : "")
                                        </span>
                                    </td>
                                </tr>
                            }
                            @if (!allFormations.Any())
                            {
                                <tr>
                                    <td colspan="3" class="text-center text-muted py-4">
                                        <i class="fas fa-info-circle me-2"></i>
                                        Aucune formation programmée
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
