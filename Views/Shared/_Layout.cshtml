<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gestion Formations</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/animations.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body class="d-flex flex-column min-vh-100">

    <!-- HEADER -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark site-navbar shadow-sm sticky-top">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-school me-2"></i> Gestion Formations
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                        aria-controls="mainNav" aria-expanded="false" aria-label="Menu">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <!-- Menu gauche -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i> Accueil
                            </a>
                        </li>

                        @if (User?.Identity?.IsAuthenticated == true)
                        {
                            if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Dashboard" asp-action="Index">
                                        <i class="fas fa-chart-line me-1"></i> Dashboard
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Employe" asp-action="Index">
                                        <i class="fas fa-users me-1"></i> Employés
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Formation" asp-action="Index">
                                        <i class="fas fa-book me-1"></i> Formations
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Inscription" asp-action="Index">
                                        <i class="fas fa-clipboard-list me-1"></i> Inscriptions
                                    </a>
                                </li>
                            }
                            else if (User.IsInRole("Employe"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="EmployeDashboard" asp-action="Index">
                                        <i class="fas fa-graduation-cap me-1"></i> Mes Formations
                                    </a>
                                </li>
                            }
                        }
                    </ul>

                    <!-- Menu droite -->
                    <ul class="navbar-nav ms-auto">
                        @if (User?.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item d-flex align-items-center me-3 nav-user">
                                <i class="fas fa-user-circle text-primary me-2 fs-5"></i>
                                <span class="fw-semibold">
                                    @(string.IsNullOrWhiteSpace(Convert.ToString(ViewBag.UserFullName)) 
                                        ? User.Identity.Name 
                                        : ViewBag.UserFullName)
                                </span>
                            </li>
                            <li class="nav-item">
                                <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-outline-light btn-sm nav-logout">
                                        <i class="fas fa-sign-out-alt me-1"></i> Déconnexion
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-light btn-sm me-2" asp-area="Identity" asp-page="/Account/Login">
                                    <i class="fas fa-sign-in-alt me-1"></i> Connexion
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary btn-sm" asp-area="Identity" asp-page="/Account/Register">
                                    <i class="fas fa-user-plus me-1"></i> Inscription
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- CONTENU -->
    <main role="main" class="flex-grow-1 py-4">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <!-- FOOTER -->
    <footer class="footer mt-auto">
        <div class="container">
            <div class="d-flex justify-content-center align-items-center">
                <small class="me-3">
                    <i class="fas fa-graduation-cap me-2"></i>
                    © @DateTime.Now.Year - Gestion Formations
                </small>
                <small>
                    <i class="fas fa-heart text-danger me-1"></i>
                    Fait avec passion
                </small>
            </div>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
